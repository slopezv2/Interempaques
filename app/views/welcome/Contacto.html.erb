<div class="hidden" id="logo">Contacto</div>
			<!-- Main -->
				<div id="main-wrapper">
					<div id="main" class="container">
						<div class="row">
							<div class="12u">
								<div class="content">

									<!-- Content -->

										<article class="box page-content">

											<header>
												<h2 class="titulos-rojos">Contacto</h2>
												<p>Nos encantar√≠a resolver cualquier inquietud que surja</p>
												<ul class="meta">
													<!--<li class="icon fa-clock-o">5 days ago</li>-->
													<li class="icon fa-comments"><a href="#"></a></li>
												</ul>
											</header>

											<section>
												<div class="row">
													<div class="12u 12u(mobile)">
														<form method="post" action="contactar/">
															<div class="field">
																<label for="nombre">Nombre</label>
																<input type="text" name="nombre" id="nombre" />
															</div>
															<div class="field">
																<label for="correo">Correo</label>
																<input type="email" name="correo" id="correo" />
															</div>
															<div class="field">
																<label for="mensaje">Mensaje</label>
																<textarea name="mensaje" id="mensaje" rows="4"></textarea>
															</div>
															<ul class="actions">
																<li><input type="submit" value="Enviar" /></li>
															</ul>
															<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
														</form>
													</div>
													
												</div>
												</p>
											</section>
										</div>
									</section>
									</article>
							</div>
						</div>
					</div>
				</div>